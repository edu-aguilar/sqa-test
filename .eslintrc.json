{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "brace-style": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "no-var": "off",
    "require-jsdoc": "off",
    "linebreak-style": 0,
    "max-len": ["error", { "ignoreComments": true, "code": 100 }],
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "never"],
    "block-spacing": 0
  },
  "globals": {
    "Polymer": true
  }
}
