{
  "entrypoint": "index.html",
  "shell": "src/sopra-quiz-app.html",
  "fragments": [
    "src/views/config-view.html",
    "src/views/landing-view.html",
    "src/views/question-view.html",
    "src/views/result-view.html",
    "src/views/not-found-view.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "data/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
