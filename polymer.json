{
  "entrypoint": "index.html",
  "shell": "src/sopra-quiz-app.html",
  "fragments": [
    "src/landing-view.html",
    "src/question-view.html",
    "src/result-view.html",
    "src/not-found-view.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "data/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled",
      "basePath": "/sopra-quiz-app/"
    },
    {
      "preset": "es6-bundled",
      "basePath": "/sopra-quiz-app/"
    },
    {
      "preset": "es6-unbundled",
      "basePath": "/sopra-quiz-app/"
    }
  ]
}
